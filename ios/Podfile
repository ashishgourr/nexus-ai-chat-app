# Minimum iOS version (required for Firebase)
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  # Fix gRPC "template argument list expected" parse error (Xcode 16+) in both gRPC-Core and gRPC-C++
  %w[gRPC-Core gRPC-C++].each do |pod_name|
    grpc_basic_seq = File.join(installer.sandbox.root, pod_name, 'src', 'core', 'lib', 'promise', 'detail', 'basic_seq.h')
    next unless File.exist?(grpc_basic_seq)
    grpc_root = File.join(installer.sandbox.root, pod_name)
    begin
      File.chmod(0644, grpc_basic_seq) rescue nil
      contents = File.read(grpc_basic_seq)
      if contents.include?('Traits::template CallSeqFactory')
        File.write(grpc_basic_seq, contents.gsub('Traits::template CallSeqFactory', 'Traits::CallSeqFactory'))
        puts "Patched #{pod_name} basic_seq.h for Xcode 16+ compatibility"
      end
    rescue => e
      puts "[!] Could not patch #{pod_name}: #{e.message}. Run in Terminal, then build:"
      puts "    chmod -R u+w #{grpc_root}"
      puts "    sed -i '' 's/Traits::template CallSeqFactory/Traits::CallSeqFactory/g' \"#{grpc_basic_seq}\""
    end
  end

  # Fix Firebase "Include of non-modular header inside framework module" (Xcode 16+) â€” set at project level so all pods inherit
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
  end

  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    # Fix BoringSSL-GRPC unsupported -G option on Xcode 16+ (Firebase/Cloud Firestore)
    if target.name == 'BoringSSL-GRPC'
      target.source_build_phase.files.each do |file|
        if file.settings && file.settings['COMPILER_FLAGS']
          flags = file.settings['COMPILER_FLAGS'].split
          flags.reject! { |flag| flag == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
          file.settings['COMPILER_FLAGS'] = flags.join(' ')
        end
      end
    end
    # Ensure Firebase/firebase_auth allow non-modular includes (apply after Flutter settings)
    target.build_configurations.each do |config|
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
    end
  end
end
